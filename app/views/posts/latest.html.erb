<div class="col-md-7 col-md-offset-2 col-xs-12">

    <!-- first coloumn -->
    <div class="row">
        <div class="col-md-12">
            <h1 class="big-h"><%= @post.title %></h1>

            <div class="row">
                <div class="col-md-1">
                    <%= link_to(image_tag(@post.profile_pic.to_s, class:"img-circle img-responsive"), post_path(id: @post.id)) %>
                </div>
                <div class="col-md-11">
                    <p>
                        <%= "#{@post.author} on #{@post.created_at.strftime(" %B %d, %Y ")}" %>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-xs-12">
            <p>
                <%= simple_format(@post.body)%>
            </p>
        </div>
    </div>
    <div class="row">
        <!--bottom text and sidebar headline row -->
        <div class="col-md-12 col-xs-12">

            <div class="row">
                <div class="col-md-3 comment socbutton">
                    <p class="text-center sbutton">
                        <a href="#">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            COMMENT</a>
                    </p>
                </div>
                <div class="col-md-4 socbutton">
                    <p class="text-center sbutton">
                        <a href="#">
                            <span class="glyphicon glyphicon-hdd" aria-hidden="true"></span>
                            SAVE FOR LATER</a>
                    </p>

                </div>
                <div class="col-md-2 socbutton">
                    <p class="text-center sbutton">
                        <a href="#">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                            SHARE</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="col-md-3">
    <!-- Second coloumn -->
    <%= image_tag(@post.profile_pic.to_s,class: "img-circle img-responsive center-block", id: "socialpic") %>
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center"><%= @post.author %></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="text-center">
                <a href="#">Twitter</a>
                <a href="#">Facebook</a>
                <a href="#">Instagram</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= image_tag("doglife", class: "center-block") %>
            <div class="row">
                <div class="col-md-4 col-md-offset-8">
                    <a href="#">About ad</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center"><%= link_to(@bottom_posts.last.title, post_path(id: @bottom_posts.last.id)) %></h4>
            <p>
                <%= @bottom_posts.last.body.truncate(160) %>
                </p>
        </div>
    </div>
</div>
</div>
<div class="row">
<!-- most popular posts headline here -->
    <div class="col-md-12 spacer">
        <h1 class="text-center">MOST POPULAR POSTS</h1>
    </div>
</div>
<div class="row tint">
<!-- pictures linking to other posts here -->
<% @bottom_posts.each do |post| %>
<div class="col-md-3">
    <%= link_to(image_tag(post.image, class: "img-responsive de-tint"), post_path(id: post.id)) %>
    <div class="row">
        <div class="col-md-12">
            <h1 class="fixed"><%= post.title %></h1>
        </div>
    </div>
</div>
<% end %>

</div>
